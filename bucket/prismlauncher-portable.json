{
    "version": "5.0",
    "description": "An Open Source Minecraft launcher with the ability to manage multiple instances, accounts and mods. Focused on user freedom and free redistributability.",
    "homepage": "https://prismlauncher.org/",
    "license": "GPL-3.0-only",
    "url": "https://github.com/PrismLauncher/PrismLauncher/releases/download/5.0/PrismLauncher-Windows-Portable-5.0.zip",
    "hash": "c5f3453cbb357db0378c8969949012699218adb9617c03707226f11cf3044662",
    "suggest": {
        "Java Runtime Environment": "java/temurin-jre"
    },
    "pre_install": [
        "if (-not (Test-Path \"$dir\\accounts.json\")) { New-Item \"$dir\\accounts.json\" -ItemType File | Out-Null }",
        "if (-not (Test-Path \"$dir\\prismlauncher.cfg\")) { New-Item \"$dir\\prismlauncher.cfg\" -ItemType File -Value \"Analytics=false`r`nAutoUpdate=false`r`nIconTheme=pe_colored`r`nLaunchMaximized=true`r`nLanguage=en_US`r`nIgnoreJavaWizard=true`r`nPastebinURL=`r`n\" | Out-Null }",
        "if (-not (Test-Path \"$dir\\notifications.json\")) { New-Item \"$dir\\notifications.json\" -ItemType File | Out-Null }"
    ],
    "notes": [
        "One time install specific requirements:",
        "- The default install language is set to \"American English\". This can be changed in the application.",
        "- The Java Runtime path will need to be manually set in the application."
    ],
    "bin": "prismlauncher.exe",
    "shortcuts": [
        [
            "prismlauncher.exe",
            "Prism Launcher"
        ]
    ],
    "persist": [
        "assets",
        "icons",
        "instances",
        "libraries",
        "meta",
        "mods",
        "themes",
        "translations",
        "accounts.json",
        "prismlauncher.cfg"
    ],
    "checkver": {
        "github": "https://github.com/PrismLauncher/PrismLauncher"
    },
    "autoupdate": {
        "url": "https://github.com/PrismLauncher/PrismLauncher/releases/download/$version/PrismLauncher-Windows-Portable-$version.zip"
    }
}
